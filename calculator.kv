<CustButton@Button>:
	font_size:20

<CalcGrid>:
	id:calculator
	display:entry
	rows:8
	spacing:10
	padding:10
	BoxLayout:
		size_hint_y:.5
		TextInput:
			id:entry
			font_size:20
			multiline:False
			on_text_validate:calculator.calculate(entry.text)
			on_double_tap:entry.text=""
	BoxLayout:
		spacing:10
		CustButton:
			text:'7'
			on_press: entry.text+=self.text
		CustButton:
			text:'8'
			on_press: entry.text+=self.text
		CustButton:
			text:'9'
			on_press: entry.text+=self.text	
		CustButton:
			text:'+'
			on_press: entry.text+=self.text
		CustButton:
			text:'e'
			on_press: entry.text+=self.text
		
	BoxLayout:
		spacing:10
		CustButton:
			text:'4'
			on_press: entry.text+=self.text
		CustButton:
			text:'5'
			on_press: entry.text+=self.text
		CustButton:
			text:'6'
			on_press: entry.text+=self.text	
		CustButton:
			text:'-'
			on_press: entry.text+=self.text
		CustButton:
			text:'pi'
			on_press: entry.text+=self.text
		
	BoxLayout:
		spacing:10
		CustButton:
			text:'1'
			on_press: entry.text+=self.text
		CustButton:
			text:'2'
			on_press: entry.text+=self.text
		CustButton:
			text:'3'
			on_press: entry.text+=self.text	
		CustButton:
			text:'*'
			on_press: entry.text+=self.text
		CustButton:
			text:'log'
			on_press: entry.text+=self.text+" "
		
	BoxLayout:
		spacing:10
		CustButton:
			text:'AC'
			on_press: entry.text=""
		CustButton:
			text:'0'
			on_press: entry.text+=self.text
		CustButton:
			text:'='
			on_press: calculator.calculate(entry.text)
		CustButton:
			text:'/'
			on_press: entry.text+=self.text
		CustButton:
			text:')'
			on_press: entry.text+=self.text+" "
	BoxLayout:
		spacing:10
		CustButton:
			text:'sin'
			on_press: entry.text+=self.text+"("
		CustButton:
			text:'cos'
			on_press: entry.text+=self.text+"("
		CustButton:
			text:'tan'
			on_press: entry.text+=self.text+"("
		Button:
			markup:True
			font_size:30
			text:"[sup]"+"o"+"[/sup]"
			on_press:mode='degress' if mode=='radians' else mode=='radians'
	BoxLayout:
		spacing:10
		CustButton:
			text:'cosec'
			on_press: entry.text+=self.text+"("
		CustButton:
			text:'sec'
			on_press: entry.text+=self.text+"("
		CustButton:
			text:'cot'
			on_press: entry.text+=self.text+"("
		CustButton:
			text:'rad'
			on_press:calculator.angles(radians,entry.text)
	